@model IEnumerable<SuperheroesWebApp.Models.Superhero>

@{
    ViewData["Title"] = "List of Superheroes";
}

<h1>Index</h1>

<p>Here are a list of Superheroes</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AlterEgo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimaryAbility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondaryAbility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Catchphrase)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlterEgo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimaryAbility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondaryAbility)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Catchphrase)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.SuperheroId }) |
                @Html.ActionLink("Details", "Details", new { id=item.SuperheroId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.SuperheroId })
            </td>
        </tr>
}
    </tbody>
</table>
