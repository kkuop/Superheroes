@model SuperheroesWebApp.Models.Superhero

@{
    ViewData["Title"] = "Edit a Superhero";
}

<h1>Edit</h1>

<h4>Superhero</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" value="@{Html.DisplayFor(model => model.Name);}" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlterEgo" class="control-label"></label>
                <input asp-for="AlterEgo" class="form-control" />
                <span asp-validation-for="AlterEgo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrimaryAbility" class="control-label"></label>
                <input asp-for="PrimaryAbility" class="form-control" />
                <span asp-validation-for="PrimaryAbility" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecondaryAbility" class="control-label"></label>
                <input asp-for="SecondaryAbility" class="form-control" />
                <span asp-validation-for="SecondaryAbility" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Catchphrase" class="control-label"></label>
                <input asp-for="Catchphrase" class="form-control" />
                <span asp-validation-for="Catchphrase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AlterEgo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrimaryAbility)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SecondaryAbility)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Catchphrase)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.AlterEgo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.PrimaryAbility)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.SecondaryAbility)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.Catchphrase)
